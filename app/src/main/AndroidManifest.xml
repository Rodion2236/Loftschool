<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rodion2236.loftmoney">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".LoftApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_l_foreground"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher_l_foreground"
        android:supportsRtl="true"
        android:theme="@style/Theme.Loftmoney">

        <activity
            android:name=".splashScreen.SplashActivity"
            android:exported="true" >
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>

        <activity
            android:name=".login.LoginActivity"/>

        <activity
            android:name=".main.MainActivity"
            android:exported="false">
        </activity>

        <activity
            android:name=".second.AdditemActivity"
            android:exported="false" />
    </application>
</manifest>